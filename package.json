{
  "name": "ignite",
  "version": "1.0.0",
  "description": "Ignite smart contract deployment tool",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "postinstall": "npm run setup:all",
    "setup:all": "npm run setup:core && npm run setup:frontend && npm run setup:plugins",
    "setup:core": "cd core && npm install",
    "setup:frontend": "cd frontend && npm install",
    "setup:plugins": "cd plugins && npm install",
    "dev": "concurrently --kill-others --kill-others-on-fail --kill-signal SIGTERM --names \"core,frontend,browser\" --prefix-colors \"blue,green,magenta\" \"npm run dev:core\" \"npm run dev:frontend\" \"npm run dev:browser\"",
    "dev:core": "cd core && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:browser": "wait-on http://localhost:1302 && node -e \"import('open').then(m => m.default('http://localhost:1302')); setInterval(() => {}, 1000)\"",
    "build": "cd core && npm run build",
    "start": "cd core && npm start",
    "format": "npm run format:core && npm run format:frontend",
    "format:core": "cd core && npm run format",
    "format:frontend": "cd frontend && npm run format",
    "format:check": "npm run format:check:core && npm run format:check:frontend",
    "format:check:core": "cd core && npm run format:check",
    "format:check:frontend": "cd frontend && npm run format:check",
    "lint": "npm run lint:core && npm run lint:frontend",
    "lint:core": "cd core && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:fix": "npm run lint:fix:core && npm run lint:fix:frontend",
    "lint:fix:core": "cd core && npm run lint:fix",
    "lint:fix:frontend": "cd frontend && npm run lint:fix",
    "docker:build": "cd plugins && npm run build:docker"
  },
  "keywords": [
    "ethereum",
    "smart-contracts",
    "deployment"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "open": "^10.2.0",
    "wait-on": "^8.0.1"
  }
}
