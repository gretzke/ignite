{
  "name": "@ignite/foundry-plugin",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "bin": {
    "foundry-plugin": "dist/index.js"
  },
  "scripts": {
    "build": "tsc --noEmit && mkdir -p dist && esbuild index.ts --bundle --platform=node --target=node18 --format=esm --outfile=dist/index.js --define:PLUGIN_VERSION='\"'$(node -p \"require('./package.json').version\")'\"'",
    "start": "node dist/index.js",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "esbuild": "^0.25.8",
    "typescript": "^5.8.3"
  }
}
