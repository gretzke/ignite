{
  "name": "@ignite/api",
  "version": "1.0.0",
  "description": "Ignite shared API contracts",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run schemas:build",
    "build:watch": "tsc -w",
    "clean": "rm -rf dist",
    "schemas:build": "mkdir -p dist && ts-json-schema-generator --path 'src/index.ts' --type '*' --expose all --out dist/schemas.json",
    "schemas:watch": "nodemon -e ts -w src -x \"npm run schemas:build\"",
    "dev": "concurrently --kill-others --names 'tsc,schemas' --prefix-colors 'cyan,magenta' \"npm run build:watch\" \"npm run schemas:watch\""
  },
  "dependencies": {
    "@ignite/plugin-types": "file:../../plugins/src/shared/dist/",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.9",
    "ts-json-schema-generator": "^2.3.0",
    "typescript": "^5.8.3"
  }
}
